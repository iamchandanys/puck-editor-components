{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "declaration": true, // IMPORTANT
    "declarationDir": "./dist/@types",
    "stripInternal": true, // IMPORTANT
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es5",
    "forceConsistentCasingInFileNames": true, // IMPORTANT
    "emitDeclarationOnly": true // IMPORTANT
  },
  "include": ["src/app/components/index.ts"],
  "exclude": ["node_modules"]
}
